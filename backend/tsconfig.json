{
    "compilerOptions": {
        "lib": ["es5", "es6", "esnext", "dom"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "entities/*": ["entities/*"],
            "modules/*": ["modules/*"]
        },
        "outDir": "./build",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    }
}
